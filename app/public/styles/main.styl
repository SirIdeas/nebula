@import 'global.styl'

////////////////////////////////////////////////////////////////////////////
// Colores
////////////////////////////////////////////////////////////////////////////
$color-text               = #263238
$color-text-inv           = white
$color-main               = #263238
$color-base               = #b0bec5
$color-sec                = #455a64
$color-soft               = #455a64

$header-height            = 64px
$footer-height            = 50px

////////////////////////////////////////////////////////////////////////////
// Global
////////////////////////////////////////////////////////////////////////////

// $defaultGenerateGrid(10px, 12)  
// $generateVerticalAlign(vrt-ali)
  
body
  relative                top
  overflow                auto
  color                   $color-text
  
.brand-logo
  img
    height                $header-height
  span
    display               inline-block
    line-height           $header-height
    vertical-align        top

nav.page
  position                relative
  z-index                 2
  background-color        $color-main
  box-shadow              none

footer.page
  line-height             $footer-height
  background-color        $color-sec
  color                   $color-text-inv
  
.text-right
  text-align              right

.text-center
  text-align              center
  
.home
  nav
  footer
    &.page
      background-color    transparent !important
      position            absolute
      left                0
      width               100%
      z-index             1
  nav.page
    top                   0
  footer.page
    bottom                0
  
.viewport
  position                relative
  z-index                 0
  
.sidebar-logo
  text-align              right
  h5
    font-weight           bold
    color                 white
    margin-top            -20px

.indice
  text-align              right
  padding                 0 20px
  h6
    font-weight           bold
    font-size             16px
    margin-top            15px
    margin-bottom         0
  li
    line-height           1.1em
    font-size             14px
    margin-top            8px

.page-inner
  background-color        white
  // border                  solid $color-soft
  // border-width            0 1px
  padding                 5px 30px
    
.home-bg
  relative                top
  width                   100%
  image                   "../images/index.jpg"
  background-size         cover
    
.home-inner
  color                   white
  position                relative
  background-color        rgba(0,0,0,.5)
  width                   100%
  padding-bottom          $footer-height
  p
    color                   white
  i:before
    font-size             96px

.blanco-fade
  background-color        rgba(255,255,255,0.2)
  border                  3px solid white
  &:hover
    background-color      $color-sec
    
pre
  border                  1px solid gray
  background-color        lightgray
  padding                 5px
  border-radius           5px
  margin-top              0
  
.ajustar
  max-width               100%

.proceso-com
  td, th
    padding               3px 8px
  pre
    margin-bottom         0px
    border                none
    background-color      transparent

.block-classes
  color                   white
  text-align              center
  .row
    margin                0
  .texto
    padding               0.5rem 0
  .sep
    padding-bottom        0.5rem
  [class^="color-"]
    box-shadow            2px 2px 8px rgba(50,50,50,0.5)
    
  .color-1
    background-color      blue
  .color-2
    background-color      blueviolet
  .color-3
    background-color      darkslateblue
  .color-4
    background-color      crimson
  .color-5
    background-color      lime
  .color-6
    background-color      darkorange
    
.rejilla
  td
    font-size             10px
    text-align            center
    border                1px solid black
    border-radius         0
  tbody th
    border-bottom         1px solid black
  .byte
    width                 50px
    text-align            center
  .obb
    background-color      gray
  .even
    background-color      lightgray

////////////////////////////////////////////////////////////////////////////
// Algunos cambios para materialize
////////////////////////////////////////////////////////////////////////////

@media only screen and (min-width: 992px)
  .container
    width                 90%
    